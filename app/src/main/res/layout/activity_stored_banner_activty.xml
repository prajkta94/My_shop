<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bannerimage"
    tools:context=".PromotionalDesigns.activity.StoredBanner_Activty">
    <View
        android:layout_width="88dp"
        android:layout_height="18dp"
        android:layout_marginTop="335dp"
        android:background="@color/blue_500"
        android:layout_marginEnd="93dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/BO_PhoneNo"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="9876543210"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/blue_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/img_location"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:fontFamily="@font/opensans"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />
    <TextView
        android:id="@+id/Address_BO"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Address of BO"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_location" />
    <!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="400dp"-->
<!--        android:src="@drawable/bannerImage">-->
<!--    </ImageView>-->
</androidx.constraintlayout.widget.ConstraintLayout>