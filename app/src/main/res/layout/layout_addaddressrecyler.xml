<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:backgroundTint="@color/gray4"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Name_Customer"
            android:text="Name of customer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MobileNo_Customer"
            android:text="Mobile no:624184681"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Address_Customer"
            android:text="Address:gfsjgfj"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Pincode_Customer"
            android:text="Pincode:400909"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Edit_CustomerAddress"
                android:text="Edit"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Delete_CustomerAddress"
                android:text="Delete"
                android:textColor="@color/red_500"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>